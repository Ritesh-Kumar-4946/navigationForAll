<?xml version="1.0" encoding="utf-8"?><!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--https://stackoverflow.com/questions/3646415/how-to-create-edittext-with-rounded-corners/6895823-->
    <item
        android:state_focused="true"
        android:state_pressed="true">

        <shape>
            <!--<solid android:color="@color/colorRed_nivesh" />-->

            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/colorRed_nivesh" />

            <corners
                android:bottomLeftRadius="@dimen/_5sdp"
                android:bottomRightRadius="@dimen/_5sdp"
                android:topLeftRadius="@dimen/_5sdp"
                android:topRightRadius="@dimen/_5sdp"/>

            <padding
                android:bottom="@dimen/_10sdp"
                android:left="@dimen/_10sdp"
                android:right="@dimen/_10sdp"
                android:top="@dimen/_10sdp" />

        </shape>
    </item>

    <item
        android:state_focused="false"
        android:state_pressed="true">

        <shape>
            <!--<solid android:color="#FF8000" />-->

            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/colorRed_nivesh" />

            <corners
                android:bottomLeftRadius="@dimen/_5sdp"
                android:bottomRightRadius="@dimen/_5sdp"
                android:topLeftRadius="@dimen/_5sdp"
                android:topRightRadius="@dimen/_5sdp"/>

            <padding
                android:bottom="@dimen/_10sdp"
                android:left="@dimen/_10sdp"
                android:right="@dimen/_10sdp"
                android:top="@dimen/_10sdp" />

        </shape>
    </item>

    <item
        android:state_focused="true"
        android:state_pressed="false">

        <shape>
            <!--<solid android:color="#FFFFFF" />-->
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/colorRed_nivesh" />


            <corners
                android:bottomLeftRadius="@dimen/_5sdp"
                android:bottomRightRadius="@dimen/_5sdp"
                android:topLeftRadius="@dimen/_5sdp"
                android:topRightRadius="@dimen/_5sdp"/>

            <padding
                android:bottom="@dimen/_10sdp"
                android:left="@dimen/_10sdp"
                android:right="@dimen/_10sdp"
                android:top="@dimen/_10sdp" />

        </shape>
    </item>

    <item
        android:state_focused="false"
        android:state_pressed="false">

        <shape>
            <!--<gradient
                android:angle="270"
                android:centerColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:startColor="#F2F2F2" />-->

            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/colorBlue_nivesh" />

            <corners
                android:bottomLeftRadius="@dimen/_5sdp"
                android:bottomRightRadius="@dimen/_5sdp"
                android:topLeftRadius="@dimen/_5sdp"
                android:topRightRadius="@dimen/_5sdp"/>

            <padding
                android:bottom="@dimen/_10sdp"
                android:left="@dimen/_10sdp"
                android:right="@dimen/_10sdp"
                android:top="@dimen/_10sdp" />

        </shape>
    </item>

    <item android:state_enabled="true">

        <shape>
            <padding
                android:bottom="@dimen/_4sdp"
                android:left="@dimen/_4sdp"
                android:right="@dimen/_4sdp"
                android:top="@dimen/_4sdp" />
        </shape>
    </item>

</selector>