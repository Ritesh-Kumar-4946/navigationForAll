    https://github.com/sephiroth74/HorizontalVariableListView/issues/33-->

    <LinearLayout
        style="@style/LL_m_w_v"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp">


        <LinearLayout style="@style/LL_m_w_h">

            <TextView
                android:id="@+id/tv_nav_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="4"
                android:ellipsize="end"
                android:ems="3"
                android:maxLines="2"
                android:text="Manju Rajesh"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/iv_nav_login_type"
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_nav_google_plus" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_nav_joined_date"
            style="@style/ww"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Joined - 6th Apr, 2017"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_8ssp" />

        <TextView
            android:id="@+id/tv_nav_user_amount"
            style="@style/ww"
            android:text="@string/rupees_symbol"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_8ssp" />


        <LinearLayout
            android:id="@+id/ll_container_account_switch"
            style="@style/LL_w_w_h"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/bg_nav_switch_user_grey"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/_5sdp">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_1sdp"
                android:paddingBottom="@dimen/_2sdp">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_nav_changeuser_grey" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_nav_switch_profile"
                style="@style/ww"
                android:paddingStart="@dimen/_1sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:text="Switch"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

