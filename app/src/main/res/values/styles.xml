<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--<item name="colorPrimary">@color/colorPrimary</item>-->
    <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
    <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->

    <!-- Base application theme. (Start)-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:actionMenuTextColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.NavigationView">
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:listDivider">@color/colorWhite</item>
    </style>
    <!-- Base application theme. (End)-->


    <!--theme for app bar layout (Start)-->
    <style name="AppBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppBarTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--theme for app bar layout (End)-->


    <!-- theme for setting drawer menu icons and texts (Starts)-->
    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>
    <!-- theme for setting drawer menu icons and texts (End)-->


    <!-- theme for setting linear layout in dashboard (Start)-->
    <style name="LinearLayout1" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- theme for linear layout with width-matchparent, width-matchparent, orientation-horizotal "m_m_h" (Start)-->
    <style name="LL_m_m_h" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
    </style>
    <!-- theme for linear layout with width-matchparent, width-matchparent, orientation-horizotal "m_m_h" (End)-->

    <!-- theme for linear layout with width-matchparent, width-matchparent, orientation-vertical "m_m_v" (Start)-->
    <style name="LL_m_m_v" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:baselineAligned">false</item>
    </style>
    <!-- theme for linear layout with width-matchparent, width-matchparent, orientation-vertical "m_m_v" (End)-->

    <!-- theme for linear layout with width-wrapparent, width-wrapparent, orientation-horizontal "m_m_h" (Start)-->
    <style name="LL_w_w_h" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
    </style>
    <!-- theme for linear layout with width-wrapparent, width-wrapparent, orientation-horizontal "m_m_h" (End)-->

    <!-- theme for linear layout with width-wrapparent, width-wrapparent, orientation-vertical "m_m_v" (Start)-->
    <style name="LL_w_w_v" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:baselineAligned">false</item>
    </style>
    <!-- theme for linear layout with width-wrapparent, width-wrapparent, orientation-vertical "m_m_v" (End)-->

    <!-- theme for linear layout with width-matchparent, width-wrapcontent, orientation-horizotal "m_w_h" (Start)-->
    <style name="LL_m_w_h" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
    </style>
    <!-- theme for linear layout with width-matchparent, width-wrapcontent, orientation-horizotal "m_w_h" (End)-->

    <!-- theme for linear layout with width-matchparent, width-wrapcontent, orientation-vertical "m_w_v" (Start)-->
    <style name="LL_m_w_v" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- theme for linear layout with width-matchparent, width-wrapcontent, orientation-vertical "m_w_v" (End)-->

    <style name="mm" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mw" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ww" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wm" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- theme for linear layout with width-matchparent, width-wrapcontent, orientation-vertical "m_w_v" (End)-->

    <!-- theme for dashboard bottom bar text with drawable on top (Start)-->
    <style name="TextRichDrawable" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <!-- theme for dashboard bottom bar text with drawable on top (End)-->
    <!-- theme for setting linear layout in dashboard (End)-->

    <!-- theme for textview in login & registration screen (Start)-->
    <style name="Text10ssp" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:textColor">@color/colorRed_nivesh</item>
    </style>
    <!-- theme for textview in login & registration screen (End)-->


    <!-- theme for edittext for login & signup screen (Start)-->
    <style name="EdtLoginSign" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edt_login</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/cursor_red</item>
    </style>
    <!-- theme for edittext for login & signup screen (End)-->
</resources>
